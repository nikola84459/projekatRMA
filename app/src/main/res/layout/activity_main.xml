<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="7sp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/od"
                    android:layout_width="50sp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Od" />

                <EditText
                    android:id="@+id/inputOd"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ems="10"
                    android:hint="Unesite polaznu lokaciju"
                    android:inputType="textPersonName" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="50sp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Do" />

                <EditText
                    android:id="@+id/inputDo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ems="10"
                    android:hint="Unesite odredište"
                    android:inputType="textPersonName" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="50sp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="55sp"
                    android:layout_weight="1"
                    android:text="Datum polazka" />

                <DatePicker
                    android:id="@+id/inputDatumPolazka"
                    android:layout_width="wrap_content"
                    android:layout_height="150sp"
                    android:calendarViewShown="false"
                    android:datePickerMode="spinner"
                    android:focusableInTouchMode="false"
                    android:spinnersShown="true" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="50sp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="55sp"
                    android:layout_weight="1"
                    android:text="Datum povratka" />

                <DatePicker
                    android:id="@+id/inputDatumPovratka"
                    android:layout_width="wrap_content"
                    android:layout_height="150sp"
                    android:calendarViewShown="false"
                    android:datePickerMode="spinner"
                    android:focusableInTouchMode="false"
                    android:spinnersShown="true" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="325dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Broj osoba" />

                <Spinner
                    android:id="@+id/inputBrojOsoba"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:entries="@array/Putnici"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="120sp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="285sp"
                android:layout_marginTop="10sp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/dugmePretrazi"
                    android:layout_width="43dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Pretraži" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="20sp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/poruka"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="50sp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/dugmeRezervacije"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="35sp"
                    android:layout_marginRight="6sp"
                    android:layout_weight="1"
                    android:text="Moje rezervacije" />

                <Button
                    android:id="@+id/dugmeCekiranje"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="6sp"
                    android:layout_marginRight="35sp"
                    android:layout_weight="1"
                    android:text="Čekiranje" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>